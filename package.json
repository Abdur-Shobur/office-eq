{
  "name": "inventory_server",
  "version": "1.0.0",
  "description": "Inventory Management System with TypeScript, Zod validation, and Mongoose",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "dev:debug": "ts-node-dev --inspect --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "prod": "npm run build && npm run start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit --fix"
  },
  "keywords": [
    "inventory",
    "typescript",
    "mongoose",
    "zod",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^6.4.16",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.1",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "zod": "^3.23.8"
  }
}